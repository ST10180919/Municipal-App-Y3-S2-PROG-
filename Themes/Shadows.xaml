<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DropShadowEffect
        x:Key="EventsDropShadow"
        BlurRadius="8"
        Direction="270"
        Opacity="0.3"
        ShadowDepth="3"
        Color="#40000000" />

    <DropShadowEffect
        x:Key="EventsItemDropShadow"
        BlurRadius="10"
        Direction="270"
        Opacity="0.3"
        ShadowDepth="2"
        Color="#40000000" />

    <DropShadowEffect
        x:Key="NoDropShadow"
        BlurRadius="0"
        Direction="0"
        Opacity="00"
        ShadowDepth="0"
        Color="#40000000" />
</ResourceDictionary>