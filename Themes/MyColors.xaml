<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="RaisinBlack">#262221</Color>
    <SolidColorBrush x:Key="RaisinBlackBrush" Color="{StaticResource RaisinBlack}" />

    <Color x:Key="Jet">#3A3535</Color>
    <SolidColorBrush x:Key="JetBrush" Color="{StaticResource Jet}" />

    <LinearGradientBrush x:Key="GradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0" Color="{StaticResource Jet}" />
        <GradientStop Offset="1" Color="{StaticResource RaisinBlack}" />
    </LinearGradientBrush>

</ResourceDictionary>