<UserControl
    x:Class="Municipal_App.Views.RequestDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Municipal_App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="670"
    d:DesignWidth="980"
    mc:Ignorable="d">
    <Grid Background="{StaticResource ColumbiaBlueBrush}">
        <TextBlock Text="{Binding ServiceRequest.Identifier}" />
        <TextBlock Text="{Binding ServiceRequest.Location}" />
        <TextBlock Text="{Binding ServiceRequest.Category}" />
        <TextBlock Text="{Binding ServiceRequest.Description}" />
        <TextBlock Text="{Binding ServiceRequest.Solution}" />
    </Grid>
</UserControl>
